{
    "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!**/node_modules",
            "!**/coverage",
            "!**/.nyc_output",
            "!**/artifacts",
            "!**/tests/functional/static",
            "!**/examples"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noPrototypeBuiltins": "off",
                "noDoubleEquals": "off",
                "noThenProperty": "off",
                "noDuplicateTestHooks": "off",
                "noVar": "off"
            },
            "style": {
                "noUnusedTemplateLiteral": "off",
                "useSingleVarDeclarator": "off",
                "useTemplate": "off",
                "useNodejsImportProtocol": "off",
                "noUselessElse": "off",
                "useExponentiationOperator": "off",
                "noParameterAssign": "off"
            },
            "complexity": {
                "useOptionalChain": "off",
                "noForEach": "off",
                "useLiteralKeys": "off",
                "noArguments": "off"
            },
            "correctness": {
                "noInnerDeclarations": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "trailingCommas": "es5",
            "semicolons": "always",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "quoteProperties": "asNeeded"
        },
        "globals": ["Promise"]
    }
}
